@model SCE.Models.ApplicationUser

@{
    ViewData["Title"] = "创建新用户";
}

<h2>创建新用户</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>注册表单</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <label class="col-md-2 control-label">姓名</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-2 control-label">所属部门</label>
            <div class="col-md-10">
                <select asp-for="PartId" class="form-control" asp-items="ViewBag.PartId"></select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">工资号</label>
            <div class="col-md-10">
                <input asp-for="StaffNo" class="form-control" />
                <span asp-validation-for="StaffNo" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">密码</label>
            <div class="col-md-10">
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">用户类型</label>
            <div class="col-md-10">
                <select asp-for="UserTypeId" class="form-control" asp-items="ViewBag.UserTypeId"></select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">工作总结文档</label>
            <br />

            <div class="col-md-10">

                <text-angular ng-model="HtmlContent" class="textarea-block" rows="10">
                </text-angular>
            </div>
        </div>

        <input type="hidden" value="{{HtmlContent}}" asp-for="Description" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-info" asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/lib/angular/angular.min.js'></script>

    <link rel='stylesheet' href='/lib/textAngular/dist/textAngular.css'>
    <script src='/lib/textAngular/dist/textAngular-rangy.min.js'></script>
    <script src='/lib/textAngular/dist/textAngular-sanitize.min.js'></script>
    <script src='/lib/textAngular/dist/textAngular.min.js'></script>
    <script>
        angular.module('SCE', ['textAngular']);
    </script>

}
