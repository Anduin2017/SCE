@model SCE.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
}

<h2>编辑</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>用户</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label class="col-md-2 control-label">姓名</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">所属部门</label>
            <div class="col-md-10">
                <select asp-for="PartId" class="form-control" asp-items="ViewBag.PartId"></select>
                <span asp-validation-for="PartId" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UserTypeId" class="control-label col-md-2">权限组</label>
            <div class="col-md-10">
                <select asp-for="UserTypeId" class="form-control" asp-items="ViewBag.UserTypeId"></select>
                <span asp-validation-for="UserTypeId" class="text-danger" />
            </div>
        </div>

        <input type="hidden" asp-for="StaffNo" class="form-control" />
        <input type="hidden" asp-for="UserName" class="form-control" />

        <div class="form-group">
            <label class="col-md-2 control-label">工作总结文档</label>
            <br />
            <div class="col-md-10">
                <text-angular ng-model="HtmlContent" class="textarea-block" rows="10">
                </text-angular>
            </div>
        </div>

        <input type="hidden" value="{{HtmlContent}}" asp-for="Description" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-info" asp-action="Index">返回列表</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">删除</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
